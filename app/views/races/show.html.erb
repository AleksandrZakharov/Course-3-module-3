</p><strong>Results:</strong>


<table>

  <thead>

    <tr>

    <th>Place</th>

    <th>Time</th>

    <th>Name</th>

    <th>Bib#</th>
    <th>City</th>
    <th>State</th>
    <th>Gender</th>
    <th>Gender Place</th>
    <th>Group</th>
    <th>Group Place</th>
    <th>Swim</th>
    <th>Pace 100</th>
    <th>T1</th>
    <th>Bike</th>
    <th>MPH</th>
    <th>T2</th>

    <th>Run</th>

    <th>Min Mile</th>

    <th colspan="3"></th>

    </tr>

  </thead>

  <tbody>

    <% @entrants.each do |entrant| %>

      <tr>

        <td><%= entrant.overall_place %></td>

        <td><%= format_hours entrant.secs %></td>

        <% if entrant.racer.id %>

          <td><%= link_to "#{entrant.last_name}, #{entrant.first_name}", racer_path(entrant.racer.id) %></td>

        <% else %>

          <td><%= "#{entrant.last_name}, #{entrant.first_name}" %></td>

        <% end %>

        <td><%= entrant.bib %></td>
        <td><%= entrant.city %></td>
        <td><%= entrant.state %></td>
        <td><%= entrant.racer_gender %></td>
        <td><%= entrant.gender_place %></td>
        <td><%= entrant.group_name %></td>
        <td><%= entrant.group_place %></td>
        <td><%= format_hours entrant.swim_secs %></td>
        <td><%= format_minutes entrant.swim_pace_100 %></td>
        <td><%= format_minutes entrant.t1_secs %></td>
        <td><%= format_hours entrant.bike_secs %></td>
        <td><%= format_mph entrant.bike_mph %></td>
        <td><%= format_minutes entrant.t2_secs %></td>
        <td><%= format_hours entrant.run_secs %></td>
        <td><%= format_minutes entrant.run_mmile %></td>

      </tr>

    <% end %>

  </tbody>

</table>